<div class="container-fluid product-show">
  <div class="row">
    <div class="col-sm-8 col-md-6">
        <%= image_tag(@product.image_url, class: "img-fluid") if @product.image_url%>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
    </div>

    <div class="col-sm-4 col-md-6">

        <h3 class="product-show-name">
          <%= @product.name %>
        </h3>

        <p class="product-show-description">
          <%= @product.description %>
        </p>

        <p class="product-show-color">
          <strong>Colour:</strong>
          <%= @product.colour %>
        </p>

        <br>
        <p class="product-show-price">
          <strong><%= @product.price %> â‚¬</strong>
        </p>
        <br>
        <p class="product-show-reviews">
          <strong>Reviews:</strong>
          <%= @product.highest_rating_comment %>
        </p>


    </div>
  </div>
</div>
