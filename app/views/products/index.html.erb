            <a href="#"><h3><%= product.name %></h3></a> <br>
            <p><%= product.description %></p>
            <p>Color: <%= product.colour %><p>
            <strong>Price: <%= product.price %>â‚¬</strong> <br> <br>
            <%= link_to 'Show', product %>
            <%= link_to 'Edit', edit_product_path(product) %>
