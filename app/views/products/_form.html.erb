<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, class: "col-sm-10 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
  </div>

  <div class="field form-group">
    <%= form.label :description, class: "col-sm-10 control-label" %>
      <div class="col-sm-10">
        <%= form.text_area :description, class: "form-control" %>
      </div>
  </div>

  <div class="field form-group">
    <%= form.label :image_url, class: "col-sm-10 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :image_url, class: "form-control" %>
      </div>
  </div>

  <div class="field form-group">
    <%= form.label :colour, class: "col-sm-10 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :colour, class: "form-control" %>
      </div>
  </div>

  <div class="field form-group">
    <%= form.label :price, class: "col-sm-10 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :price, class: "form-control" %>
      </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Submit', class: "btn btn-outline-success my-2 my-sm-0", type:"submit" %>
    </div>
  </div>

<% end %>
