<header id="header-singup">
  <h2>Sign up</h2>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field form-group-sign-up">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group-sign-up">
    <%= f.label :password, class: "control-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "new-password" %>
  </div>

  <div class="field form-group-sign-up">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat password", autocomplete: "new-password" %>
  </div>

    <div class="actions form-group-sign-up">
      <%= f.submit "Sign up", class: "btn btn-outline-success my-2 my-sm-0" %>
      <br> <br>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
